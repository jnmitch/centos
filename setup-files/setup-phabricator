#!/bin/bash

# Set variable
    PHAB="/var/www/html/phacility"
    DB_PHAB_PWD=$(< $LOCALFILES/password-mysql_phabricator)

# Download Phabricator
    mkdir $PHAB
    cd $PHAB

    git clone https://github.com/phacility/libphutil.git
    git clone https://github.com/phacility/arcanist.git
    git clone https://github.com/phacility/phabricator.git

    cd phabricator # !?!?!?!?

    ./bin/config set mysql.host localhost
    ./bin/config set mysql.host 3306
    ./bin/config set mysql.user root
    ./bin/config set mysql.pass MySqL63
    ./bin/storage upgrade --user root --password MySqL63

# Unset variable
    unset PHAB
    unset DB_PHAB_PWD
